<div class="flash-message success">
  <%= flash[:notice] %>
</div>
<div class="main-wrapper">
  <div class="main-list">
    <h3>Books</h3>
    <table class="is-border">
      <tr>
        <th width="150">Title</th>
        <th width="450">Body</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="link" width="50"><%= link_to 'Show', book_path(book.id) %></td>
          <td class="link" width="50"><%= link_to 'Edit', edit_book_path(book.id) %> </td>
          <td class="link" width="50"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="new-post">
    <h3>New book</h3>
    <% if @book.errors.any? %>
      <div class="error-message">
        <div class="error-message-title"><%= @book.errors.count %> errors prohibited this book from being saved.</div>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li>â–ª <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: "form" %>
      <p>Body</p>
      <%= f.text_area :body, class: "form-area" %><br>
      <%= f.submit 'Create Book', class: "submit-button" %>
    <% end %>
  </div>
</div>
