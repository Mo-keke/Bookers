<div class="editpage">
  <h3>Editing Book</h3>
  <% if @book.errors.any? %>
    <div class="error-message">
      <div class="error-message-title"><%= @book.errors.count %> errors prohibited this book from being saved.</div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>â–ª <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %>
  <% end %>
</div>

<div class="editpage-link">
  <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %>
</div>